<UserControl x:Class="AccountManager.UIL.Authorization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBox Name="UserLogin_TB" Height="23" TextWrapping="Wrap" Width="120"/>
                <PasswordBox  Name="UserPassword_PB" Height="23" Width="120"/>
                <Button Name="Login_B"  Click="Login_B_Click" Content="Login" Width="75"/>
                <Button Name="Logout_B"  Click="Logout_B_Click" Content="Logout" Width="75" Visibility="Hidden"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
