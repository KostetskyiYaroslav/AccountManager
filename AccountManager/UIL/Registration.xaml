<UserControl x:Class="AccountManager.UIL.Registration"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:wpfTool="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200" Loaded="StackPanel_Loaded">
                <wpfTool:WatermarkTextBox   Margin="5,5,5,5" Width="160" Name="UserLogin_WTB"   LostFocus="UserLogin_WTB_LostFocus"  Watermark="Entere there UserName...*"   />
                <PasswordBox                Margin="5,5,5,5" Width="160" Name="UserPassword_PB" LostFocus="UserPassword_PB_LostFocus"  />
                <Button Name="AddUser_B" Width="60" Margin="0,5,0,5" Content="Add" Click="AddUser_B_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
